<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_for @user, url: signin_path do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>

  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>

  <br>

  <%= f.submit "Sign In" %>
<% end %>
