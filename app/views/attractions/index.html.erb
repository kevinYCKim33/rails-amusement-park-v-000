<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Listing attractions</h1>

<table>
  <% if current_user.admin == true %>
    <%= link_to "New Attraction", new_attraction_path %>
  <% end %>
  <tr>
    <th>Name</th>
    <th>Tickets</th>
  </tr>

  <%= render partial: 'index', collection: @attractions, as: :attraction %>

</table>
